.mvi-checkboxes {
  //left: -10px;
  padding: 6px;

  .boolean label.boolean {
    padding-top: 0;
    padding-bottom: 3px;
  }

  .checkbox {
    display: table-cell;
    width: 100%;
    height: 100%;
    vertical-align: middle;
    text-align: center;
  }

  label {
    display: inline-block;
    color: #fff;
    cursor: pointer;
    position: relative;

    span {
      display: inline-block;
      position: relative;
      background-color: transparent;
      width: 25px;
      height: 25px;
      transform-origin: center;
      border: 2px solid $checkbox-tick-hover;
      //border-radius: 50%;
      border-radius: 0;
      vertical-align: -6px;
      margin-right: 10px;
      transition: background-color 150ms 200ms, transform 350ms cubic-bezier(.78, -1.22, .17, 1.89);

      &:before {
        content: "";
        width: 0;
        height: 2px;
        border-radius: 2px;
        background: $checkbox-tick-hover;
        position: absolute;
        transform: rotate(45deg);
        top: 11px;
        left: 7px;
        transition: width 50ms ease 50ms;
        transform-origin: 0 0;
      }

      &:after {
        content: "";
        width: 0;
        height: 2px;
        border-radius: 2px;
        background: $checkbox-tick-hover;
        position: absolute;
        transform: rotate(305deg);
        top: 14px;
        left: 9px;
        transition: width 50ms ease;
        transform-origin: 0 0;
      }
    }

    &:hover {
      span {
        &:before {
          width: 5px;
          transition: width 100ms ease;
        }

        &:after {
          width: 10px;
          transition: width 150ms ease 100ms;
        }
      }
    }
  }

  input[type="checkbox"] {
    display: none;
  }

  .boolean {
    .mvi-active-checkbox {
      background-color: $checkbox-background-active;
      transform: scale(1.25);

      &:after {
        width: 10px;
        background: $checkbox-tick-active;
        transition: width 150ms ease 100ms;
      }

      &:before {
        width: 5px;
        background: $checkbox-tick-active;
        transition: width 150ms ease 100ms;
      }
    }

    label.boolean {
      padding-left: 0;
    }
  }

  .disabled {
    .mvi-active-checkbox {
      background-color: $readonly-background;
      cursor: not-allowed;

      &:after {
        width: 10px;
        background: $readonly-font-colour;
        transition: width 150ms ease 100ms;
      }

      &:before {
        width: 5px;
        background: $readonly-font-colour;
        transition: width 150ms ease 100ms;
      }
    }
  }
}

