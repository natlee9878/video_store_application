<div class="ibox">
  <div class="ibox-body">
    <div class="ibox-filters">
      <p class="required-field">All fields marked with&nbsp;<span class="red-asterisk">*</span>&nbsp;are required</p>
    </div>
    <div class="ibox-content">
      <div class="row mb20">
        <div class="col-sm-6">
          <div class="form-group">
            <div class="control-wrapper">
          <%= label_tag 'user', 'User' %>
              <div class="read-only">
                <%= @notification.rentals_video.rental.user.first_name %>
                <%= @notification.rentals_video.rental.user.last_name %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <div class="control-wrapper mvi-checkboxes">
              <%= f.input :status, label: '<span></span> Status'.html_safe,
                          as: :boolean,
                          input_html: { class: ' form-control text-left' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>