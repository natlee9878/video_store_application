  text-align: center;
}

.gn-menu-main li.gn-trigger {
  position: relative;
  width: 60px;
  user-select: none;
}

.gn-menu-main > li:last-child {
  float: right;
  border-right: none;
  border-left: 1px solid $menu-border-color;
}

.gn-menu-main > li > a {
  padding: 0 30px;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: bold;
}

.gn-menu-main:after {
  display: table;
  clear: both;
  content: '';
}

.gn-menu-wrapper {
  position: fixed;
  top: 60px;
  bottom: 0;
  left: 0;
  overflow: hidden;
  width: 60px; /* will be transitioned to 340px */
  border-top: 1px solid $menu-border-color;
  background: $menu-background-color;
  transition: transform 0.3s, width 0.3s;
  z-index: 999999;
  transform: translateX(0px);
}

.gn-scroller {
  position: absolute;
  overflow-y: scroll;
  width: 370px;
  height: 100%;
}

.gn-menu {
  border-bottom: 1px solid $menu-border-color;
  text-align: left;
  font-size: 18px;

  .active {
    background: $menu-active-tab-background;

    a {
      color: $menu-active-tab-font-colour;
    }
  }
}

.gn-menu li:not(:first-child), .gn-menu li li {
  box-shadow: inset 0 1px $menu-border-color
}

.gn-submenu li {
  overflow: hidden;
  height: 0;
  transition: height 0.3s;

  a {
    color: $submenu-font-color
  }
}

.submenu-header {
  a {
    color: $submenu-heading-font-color;
  }

  &:after {
    font-family: "Font Awesome 6 Free";
    content: "\f106";
    display: flex;
    position: absolute;
    width: 83%;
    justify-content: flex-end;
    font-weight: 900;
  }
}

.menu-option {
  display: grid;

  i {
    width: 60px;
  }
}

.gn-icon::before {
  display: inline-block;
  width: 60px;
  text-align: center;
  text-transform: none;
  font-weight: normal;
  font-style: normal;
  font-variant: normal;
  line-height: 1;
  speak: none;
  -webkit-font-smoothing: antialiased;
}

.gn-icon span {
  width: 0;
  height: 0;
  display: block;
  overflow: hidden;
}

.gn-icon-menu::before {
  margin-left: -15px;
  vertical-align: -2px;
  width: 30px;
  height: 3px;
  background: $menu-box-shadow-colour;
  box-shadow: 0 3px $menu-background-color, 0 -6px $menu-box-shadow-colour, 0 -9px $menu-background-color, 0 -12px $menu-box-shadow-colour;
  content: '';
}

.no-touch .gn-icon-menu:hover::before,
.no-touch .gn-icon-menu.gn-selected:hover::before {
  background: $menu-background-color;
  box-shadow: 0 3px $menu-box-shadow-colour, 0 -6px $menu-background-color, 0 -9px $menu-box-shadow-colour, 0 -12px $menu-background-color;
}

.gn-icon-menu.gn-selected::before {
  background: $menu-opened-colour;
  box-shadow: 0 3px $menu-background-color, 0 -6px $menu-opened-colour, 0 -9px $menu-background-color, 0 -12px $menu-opened-colour;
}

.gn-menu-wrapper.gn-open-all, .gn-menu-wrapper.gn-open-part {
  transform: translateX(0px);
}

.gn-menu-wrapper.gn-open-all {
  width: 340px;
}

.gn-menu-wrapper.gn-open-all .gn-submenu li {
  height: 60px;
}

@media screen and (max-width: 422px) {
  .gn-menu-wrapper.gn-open-all {
    transform: translateX(0px);
    width: 100%;
  }

  .gn-menu-wrapper.gn-open-all .gn-scroller {
    width: 130%;
  }
}

.submenu-header {
  .gn-submenu {
    height: 0 !important;
    display: none;
  }

  li {
    transform: translateY(-100%);
    //transform: translateX(-100%);
    transition: transform 0.5s, opacity 1s;
    opacity: 0;
  }
}

.active-submenu {
  .gn-submenu {
    height: inherit !important;
    display: grid;
  }

  .active-submenu-li {
    opacity: 1;
    transform: translateY(0%);
    //transform: translateX(0%);
  }

  &:after {
    font-family: "Font Awesome 6 Free";
    content: "\f107";
    display: flex;
    position: absolute;
    width: 83%;
    justify-content: flex-end;
    font-weight: 900;
  }
}

// Dropdown Menus
.options-nav {
  ul {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      vertical-align: middle;
      float: left;

      a {
        color: $option-text-color;
        text-decoration: none;

        &:hover {
          color: $submenu-heading-font-color;
        }
      }

      .menu {
        border-radius: $btn-border-radius;
        overflow: hidden;
        display: none;
        position: absolute;
        width: 100%;

        li {
          display: inline-grid;
          width: 100%;
          height: 30px;
          border-bottom: 1px solid $menu-border-color;

          a {
            background: $menu-background-color;
            text-align: center;
            vertical-align: middle;
            padding-top: 5px;

            &:hover {
              background: $menu-hover-background-color;
              color: $menu-hover-font-color;
            }
          }
        }
      }
    }
  }
}

// Action Buttons

.action-buttons-container {
  background-image: linear-gradient(360deg, $action-button-container, darken($action-button-container, 5%));
  width: 100%;
  height: min-content;
  padding: 5px 0 5px 5px;
  margin: 0;
  display: flex;
  align-content: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  flex-direction: row;

  div {
    overflow: scroll;
  }
}

// Flash Messages

#flashes {
  width: 90%;
  display: flex;
  flex-wrap: nowrap;
  align-items: stretch;
  justify-content: center;
  flex-direction: column;
  margin-right: -60px;

  .alert {
    background-image: linear-gradient(360deg, $alert-danger-flash-background, darken($alert-danger-flash-background, 5%));
  }

  // TODO Handle Success & Failure Message colours
  .alert-info {
    background-image: linear-gradient(360deg, $alert-flash-background, darken($alert-flash-background, 5%));
  }

  .content {
    position: relative;
    display: inline;
    top: -4px;
    font-style: italic;
    font-weight: 600;
  }

  .alert-close {
    background-image: linear-gradient(360deg, $alert-close-btn, darken($alert-close-btn, 5%));
    position: relative;
    top: -24px;
  }
}

// Modals

.positioning-header {
  display: none;
}

.modal {
  margin-left: 5%;
  max-width: 90%;

  position: fixed;
  top: 100%;

  .modal-content {
    height: fit-content;
    max-height: 80vh;
    overflow-y: scroll;
    overflow-x: hidden;
    border-radius: $btn-border-radius;

    .mvi-tab-form-wrapper {
      padding: 10px 10px 10px 10px;
    }
  }

  .positioning-header {
    display: flex;
    position: relative;
    max-width: 1200px;
    height: min-content;
    min-height: 45px;
    background: pink;
    padding: 5px 10px;
    visibility: hidden;

    // Row right buttons
    flex-direction: row;
    align-items: center;
    justify-content: space-between;

    .mvi-ibox-title {
      width: 70%;
      position: relative;
      top: 7px;
      margin-left: 5px;
      margin-bottom: 5px;

    }
  }

  .ibox-header {
    position: fixed;
    max-width: 1200px;
    z-index: 99999;
    top: 110px;
  }

  .nav-tabs {
    position: fixed;
    top: 69px;
    width: 1200px;
  }
}

.modal-dialog {
  display: flex !important;
  flex-flow: row nowrap;
  margin-top: 60px;
  margin-left: 60px;
  width: -webkit-fill-available;
  padding-left: 0;
  height: auto;
  flex-direction: column;
  align-content: stretch;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: stretch;
}

#action-modal {
  filter: drop-shadow(0 0 0.75rem black);
  margin-left: 25%;
  max-width: 50%;

  .ibox-header {
    max-width: 640px;
  }
}

// Login
.login-content-wrapper {
  position: fixed;
  width: 100%;
  margin: auto;
}

.login-wrapper .login-container {
  background-color: $background-colour-content;
}

.login-form {
  a {
    color: $link-colour !important;
  }
}

.filter-controls {
  input {
    color: $filter-font-colour !important;
  }
}

.tab-content {
  .ibox-content {
    padding: 20px 20px 20px 20px;
  }
}

// Quick-Edit Form

#quick-edit {
  max-width: 1340px;
  margin-left: 60px;
  width: 100%;

  .quick-edit-header {
    .inner {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
      height: 50px;
      align-content: center;
      align-items: center;
      padding-left: 20px;
      padding-right: 20px;

      h4 {
        color: $menu-primary-font-color;
        margin: 0;
      }
    }
  }
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

th, td {
  &.money-value, &.date-value {
    text-align: right;
  }
}

// Fieldsets

fieldset {
  width: 100%;
}

// Devise

.password-btn {
  &:disabled {
    color: white !important;
  }
}
