<div class="ibox">
  <div class="ibox-body">
    <div class="ibox-filters">
      <p class="required-field">All fields marked with&nbsp;<span class="red-asterisk">*</span>&nbsp;are required</p>
    </div>
    <div class="ibox-content">
      <div class="row mb20">
        <div class="col-sm-6">
          <div class="form-group">
            <div class="control-wrapper">
              <%= f.input :title, as: :string, label: '<span></span> Title'.html_safe,
                          input_html: { class: ' form-control', spellcheck: true  }%>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <div class="control-wrapper">
              <%= f.input :content_rating, as: :select, collection: Video.content_ratings.keys.map { |content_rating| [content_rating.upcase, content_rating] },
                          label: 'Content Rating',
                          input_html: { class: 'select2 form-control' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row mb20">
      <div class="col-sm-12">
        <div class="form-group">
          <div class="control-wrapper">
            <%= f.input :description, label: 'Description', input_html: { class: ' form-control froala' } %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mb20">
      <div class="col-sm-6">
        <div class="form-group mvi_dropzone">
          <div class="control-wrapper">
            <%= f.input :thumbnail, as: :file,
                        input_html: { class: 'form-control mvi_upload_input' } %>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <div class="control-wrapper">
            <%= f.label :genre_ids, 'Genres' %>
            <%= f.collection_select :genre_ids, Genre.all, :id, :name, {}, { multiple: true, class: 'select2 form-control' } %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mb20">
      <div class="col-sm-6">
        <div class="form-group">
          <div class="control-wrapper mvi-checkboxes">
            <%= f.input :active, label: '<span></span> Active'.html_safe,
                        as: :boolean,
                        input_html: { class: ' form-control text-left' } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

