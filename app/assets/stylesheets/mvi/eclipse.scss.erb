//Buttons

.btn {
  text-align: center;
  display: inline-block;
  position: relative;
  text-decoration: none;
  text-transform: capitalize;
  padding: 7px 0;
  width: 135px;
  overflow: hidden;
  color: $link-text-color;
  border-radius: $btn-border-radius;
  border-left: 1px solid $btn-break-colour;

  transition: all 0.2s linear 0s;

  &:before {
    font-family: "Font Awesome 6 Free";
    content: "\f061";
    font-size: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    right: -30px;
    width: 30px;
    height: 100%;
    background-color: rgba($btn-overlay-color, 0.3);
    border-radius: 0 $btn-border-radius $btn-border-radius 0 !important;
    transition: all 0.1s linear 0s;
    text-align: center;
  }

  &:hover {
    text-indent: -30px;

    &:before {
      right: 0;
      text-indent: 0px;
    }
  }

  &:active {
    transition: .1s transform linear .1s;
    background-color: darken($btn-new, 20%);
  }

  margin-left: 3px;
  margin-bottom: 3px;
}

.btn {
  background-image: linear-gradient(360deg, $btn-view, darken($btn-view, 0.5%));
}

.btn-new {
  background-image: linear-gradient(360deg, $btn-new, darken($btn-new, 0.5%));

