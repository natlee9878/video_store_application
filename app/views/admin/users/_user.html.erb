<tr>
  <td>
    <%= user.first_name %> <%= user.last_name %>
  </td>
  <td>
    <%= user.suburb %>
  </td>
  <td>
    <%= user.state %>
  </td>
  <td>
    <%= user.email %>
  </td>
  <td>
    <%= user.role %>
  </td>
  <td>
    <%= boolean_label(user.active, user.human_active) %>
  </td>
  <td>
    <% icon = '<i class="fas fa-pencil-alt" aria-hidden="true"></i>' %>
    <% full_icon = '<i class="fas fa-edit" aria-hidden="true"></i>' %>
    <% form_path = edit_polymorphic_path([:admin, user]) %>
    <%#= link_to 'Edit', edit_admin_user_path(user), remote: true, class: 'btn btn-primary edit-button' %>
    <%= link_to icon.html_safe, '#', title: 'Edit user',
                class: 'index-link modal-btn modal-edit', data: { 'form-url': form_path, alt_list: action_name } %>
  </td>
</tr>